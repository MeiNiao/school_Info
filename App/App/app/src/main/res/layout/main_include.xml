<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_100_dp"
        android:layout_marginTop="@dimen/dimension_20_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_chapterexericse"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/boshi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="周末博识"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_test"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/meishi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="周末美食"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_history"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/xiuxian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="周末休闲"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_100_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_collect"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/jianzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="周末兼职"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_error"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/jianshen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="周末健身"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_statics"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/huzhu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="校园互助"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_100_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shuoming" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="使用说明"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_updatapasswd"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/geren" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="个人信息"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_message"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_56_dp"
                android:layout_height="@dimen/dimension_56_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/tongzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_6_dp"
                android:text="通知、通告"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_16_dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
