<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.yang.app.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_48_dp"
        android:background="@color/toolbar"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimension_40_dp"
            android:layout_height="@dimen/dimension_40_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_10_dp"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimension_14_dp"
            android:gravity="center_vertical"
            android:text="用户注册"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_26_dp" />

    </LinearLayout>

    <!--中间内容部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_0_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dimension_6_dp"
            android:paddingTop="@dimen/dimension_6_dp"
            android:text="用户注册信息"
            android:textColor="@color/register_title"
            android:textSize="@dimen/dimension_22_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a7a6a3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:background="@drawable/register_lin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:text="用户名(*):"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18_dp" />

            <EditText
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_18_dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:background="@drawable/register_lin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:text="姓名(*):"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18_dp" />


            <EditText
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_18_dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:background="@drawable/register_lin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:text="手机号(*):"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18_dp" />


            <EditText
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_18_dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:background="@drawable/register_lin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:text="验证码:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18_dp" />


            <EditText
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_18_dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:background="@drawable/register_lin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:text="学校:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18_dp" />


            <EditText
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_18_dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:background="@drawable/register_lin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:text="专业:"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18_dp" />


            <EditText
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_18_dp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_44_dp"
        android:layout_marginBottom="@dimen/dimension_10_dp"
        android:layout_marginLeft="@dimen/dimension_20_dp"
        android:layout_marginRight="@dimen/dimension_20_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimension_4_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_03"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_18_dp" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimension_4_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_05"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_18_dp" />


    </LinearLayout>
</LinearLayout>

